    "version": "0.2.0",
    "configurations": [
        {
            "name": "Unit Test",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "windows": {
                "program": "${workspaceFolder}/node_modules/jest/bin/jest.js"
            },
            "args": [
                "--runInBand"
            ],
            "cwd": "${workspaceFolder}",
        },
        {
            "type": "node",
            "name": "Unit Test Current File",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "windows": {
                "program": "${workspaceFolder}/node_modules/jest/bin/jest.js"
            },
            "args": [
                "${fileBasenameNoExtension}"
            ],
            "cwd": "${workspaceFolder}",
            "disableOptimisticBPs": true,
        },
        {
            "name": "Single test",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "windows": {
                "program": "${workspaceFolder}/node_modules/jest/bin/jest.js"
            },
            "args": [
                "-t'Decorator/valueType'"
            ],
            "cwd": "${workspaceFolder}",
        },
    ]
}