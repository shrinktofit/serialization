{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "lib": [
        "ES2015",
        "ES2016",
        "ESNext.AsyncIterable"
    ],
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": [
      "test",
      "dist"
  ]
}
